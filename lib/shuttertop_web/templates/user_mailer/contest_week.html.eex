<table border="0" cellpadding="0" cellspacing="0" role="presentation" style="vertical-align:middle;" width="100%">
    <%= unless is_nil(@cover) do %>
    <tr>
      <td align="left" style="font-size:0px;padding:10px 25px;word-break:break-word;">
        <div style="font-family:open Sans Helvetica, Arial, sans-serif;font-size:18px;line-height:24px;text-align:left;color:#666666;">
        <a href="<%= @url %>" target="_blank">
          <img height="auto" src="<%= @cover %>" style="border:none;display:block;outline:none;text-decoration:none;height:auto;width:100%;font-size:13px;" />
        </a>
        </div>
      </td>
    </tr>
    <% end %>
    <tr>
      <td align="left" style="font-size:0px;padding:10px 25px;word-break:break-word;">
        <div style="font-family:open Sans Helvetica, Arial, sans-serif;font-size:18px;line-height:24px;text-align:left;color:#ffffff;"><span style="color:#666">
        <%= gettext("Ciao") %>, </span></div>
      </td>
    </tr>
    <tr>
      <td align="left" style="font-size:0px;padding:10px 25px;word-break:break-word;">
        <div style="font-family:open Sans Helvetica, Arial, sans-serif;font-size:18px;line-height:24px;text-align:left;color:#666666;">
        <%= gettext("%{contest_name} Ã¨ il nuovo contest della settimana creato da %{from}", from: @from, contest_name: @contest_name) %>.
        </div>
      </td>
    </tr>
    <tr>
      <td align="left" style="font-size:0px;padding:10px 25px;word-break:break-word;">
        <div style="font-family:open Sans Helvetica, Arial, sans-serif;font-size:18px;line-height:24px;text-align:left;color:#666666;">
        <%= gettext("Clicca sul bottone qui sotto per caricare e votare le foto", from: @from) %>.
        </div>
      </td>
    </tr>
    <tr>
      <td align="center" vertical-align="middle" style="font-size:0px;padding:10px 25px;padding-top:25px;word-break:break-word;">
        <table border="0" cellpadding="0" cellspacing="0" role="presentation" style="border-collapse:separate;line-height:100%;">
          <tr>
            <td align="center" bgcolor="#222222" role="presentation" style="border:none;border-radius:10px;cursor:auto;mso-padding-alt:10px 25px;background:#222222;" valign="middle">
              <a href="<%= @url %>" style="display:inline-block;background:#222222;color:#ffffff;font-family:open Sans Helvetica, Arial, sans-serif;font-size:18px;font-weight:bold;line-height:120%;margin:0;text-decoration:none;text-transform:none;padding:10px 25px;mso-padding-alt:0px;border-radius:10px;" target="_blank">
              <%= gettext("Vai al contest") %>
              </a>
            </td>
          </tr>
        </table>
      </td>
    </tr>

  </table>
